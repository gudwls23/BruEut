<%= form_for([@f, @f.fcomments.build]) do |f| %>
  <div class="field">
    <%= f.hidden_field :user_id, :value => @user.id %>
  </div>
  <div class="field">
    <%= f.hidden_field :commenter, :value => @user.name %>
  </div>
  <div class="field">
    <div class="fl"><%= f.label :댓글 %></div> <br/>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
