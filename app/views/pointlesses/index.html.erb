<div class="main">
<table class="Eut">
  <thead>
    <tr>
      <th scope ="row">Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pointlesses.each do |pointless| %>
      <tr>
        <td scope="row"><%= link_to pointless.title, pointless %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="right">
<% if user_signed_in? %>
  <%= link_to '[글쓰기]', new_pointless_path %>
<% end %>

<%= link_to '[홈]', root_path %> <br>

<%= will_paginate @pointlesses %>
</div>
</div>
